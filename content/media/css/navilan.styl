@import "_vars"
@import "_head"
@import "_box"

.page
    clearfix()

#pageheader
    border-radius bottom right 12px
    h1, h2
        padding-left 64px

.wrap
    margin-bottom 0

#pagefooter
    absolute bottom -80px
    width 100%

article
    padding 48px 12px 12px 64px
    line-height 36px
    font-size 18px
    color textgray
    float left
    width 494px
    text-shadow 0px 2px 1px #fff
    box()

#main
    min-height 600px

#breadcrumb
    clearfix()
    padding 8px
    font-size 11px
    border-bottom 1px dotted darkgray
    margin-bottom 24px

    li
        margin-right 4px
        display inline
        
        &:after
            content ' »'
            font-size 14px
            
        &:last-child:after
            content ''
        
    img
    margin-right 4px
    a
        text-decoration none
        color textgray

        &:hover
            color dark1

    .title
        overflow ellipsis
        display inline-block
        max-width 64px


#share
    clearfix()
    padding 12px 0
    margin-top 24px
    border-bottom 1px dotted darkgray

#twitter_share
    margin-right 12px

#twitter_share, #fb-like
    width 60px
    float left

#sidebar
    width 420px
    float right
    position relative
    margin 0 12px 48px
    min-height 600px
    
    .related
        cursor pointer
        ul
            display none

        li
            list-style-type none
            margin-bottom 12px

        &.selected
            ul
                display block
            h3
                &:after
                    content: ' ▼'

        h3
            color darkgray
            border-bottom 1px solid darkgray
            margin 12px 0
            font-weight bold
            line-height 36px
            font-size 18px
            cursor pointer
            width 420px
            webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -o-user-select: none;
            user-select: none;
            cursor pointer

            &:after
                content: ' ▶'

    .cover
        clearfix()
        img
            margin 0 auto
            max-width 400px
            height auto