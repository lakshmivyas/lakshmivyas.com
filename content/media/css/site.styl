@import "_vars"

global-reset()
reset-html5()

html
    background-color #ccc
    
body
    color black
    background linear-gradient(top,  #ededed, #ccc)
    font-family "Helvetica", "Helvetica Neue", sans-serif
    margin 0
    padding 0

.wrap
    clearfix()
    background linear-gradient(bottom,  #ededed, #fff)
    width 1024px
    border-radius bottom 10px
    margin 0 auto 24px
    padding 0 0 48px
    box-shadow 0 1px 4px rgba(0, 0, 0, 0.27), 0 0 40px rgba(0, 0, 0, 0.06) inset
    
#pageheader
    padding-top 57px
    text-align center
    h1
        font-size 48px
        font-weight bold
        line-height 70px
        color almostblack
        text-shadow 0px 2px 1px #fff

    h2
        font-size 24px
        line-height 42px
        font-weight 200
        padding-left 2px
        color textgray

.amp
    font-family "Skia", Baskerville,"Goudy Old Style","Palatino","Book Antiqua",serif
    font-size 110%
    font-style italic
    margin-left -1px